# ===========================================
# CONFIGURACIÓN GLOBAL DEL PROYECTO TURNS
# ===========================================
# Renombrar este archivo a .env y configurar las variables

# -----------------------
# BACKEND (NestJS)
# -----------------------
NODE_ENV=development
BACKEND_PORT=3000
BACKEND_URL=http://localhost:3000

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# -----------------------
# BASE DE DATOS (PostgreSQL)
# -----------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/turns_db?schema=public

# -----------------------
# REDIS (Caché y Queue)
# -----------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------
# GOOGLE OAUTH 2.0
# -----------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# -----------------------
# MERCADO PAGO
# -----------------------
MERCADOPAGO_PUBLIC_KEY=TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
MERCADOPAGO_ACCESS_TOKEN=TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
MERCADOPAGO_CLIENT_ID=your-mercadopago-app-id
MERCADOPAGO_CLIENT_SECRET=your-mercadopago-client-secret
MERCADOPAGO_REDIRECT_URI=http://localhost:3000/api/v1/mercadopago/callback
MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret

# -----------------------
# NOTIFICACIONES
# -----------------------
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@turnos.app
SENDGRID_FROM_NAME=Sistema de Turnos

# SMS (Twilio - opcional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# -----------------------
# STORAGE (Cloudinary)
# -----------------------
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# -----------------------
# FRONTEND WEB CLIENT (Next.js)
# -----------------------
WEB_CLIENT_PORT=3001
NEXT_PUBLIC_WEB_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
NEXT_PUBLIC_WS_URL=http://localhost:3000
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=TEST-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# -----------------------
# ADMIN DASHBOARD (Next.js)
# -----------------------
ADMIN_DASHBOARD_PORT=3002
NEXT_PUBLIC_ADMIN_URL=http://localhost:3002

# -----------------------
# MOBILE CLIENT (Expo)
# -----------------------
EXPO_PUBLIC_API_URL=http://192.168.1.100:3000/api/v1
EXPO_PUBLIC_WS_URL=http://192.168.1.100:3000

# -----------------------
# MONITOREO Y LOGS
# -----------------------
SENTRY_DSN=https://xxxxx@xxx.ingest.sentry.io/xxxxx

# -----------------------
# OTROS
# -----------------------
ENCRYPTION_KEY=your-32-character-encryption-key
CORS_ORIGINS=http://localhost:3001,http://localhost:3002
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

